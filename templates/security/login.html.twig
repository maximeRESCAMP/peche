{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="text-center mb-5 ">Se connecter</h1>
        <div class="d-flex justify-content-lg-center">
            <div class="col-lg-5 col-md-12">
                <label for="inputEmailOrUsername">Email ou Pseudo</label>
                <input type="text" value="{{ last_username }}" name="email_or_username" id="inputEmailOrUsername"
                       class="form-control mb-3" autocomplete="email" required autofocus>
                <label for="inputPassword">Mots de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-3"
                       autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Valider
                    </button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
